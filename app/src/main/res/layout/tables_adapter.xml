<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="data"
                type="com.example.dinein.models.Tables"/>
        <variable
                name="viewmodel"
                type="com.example.dinein.presentation.home.viewmodel.MainViewModel"/>
        <variable
                name="context"
                type="com.example.dinein.presentation.tables_activity.Tables_Activity"/>

        <variable
            name="listener"
            type="com.example.dinein.presentation.Handler"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bluereduisbackground"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <TextView
                    android:id="@+id/name"
                    android:padding="15dp"
                    android:onClick="@{() -> listener.SwitchToMainActivity(context)}"
                   android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                     android:orientation="vertical"
                    android:text="@{String.valueOf(data.number)}"
                    android:textColor="@color/white"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>